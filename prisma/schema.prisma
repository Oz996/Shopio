generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String
  price       Int
  category    String
  description String
  details     String
  brand       String
  images      String[]
  popular     Boolean?
  reviews     Review[]
  createdAt   DateTime  @default(now())
  editedAt    DateTime  @default(now())
  @@map("products")
}

model Review {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  user_email  String
  content     String
  product     Product?  @relation(fields: [productId], references: [id])
  productId   String?   @db.ObjectId
  @@map("reviews")
}
