generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String    @unique
  price       Int
  category    String
  description String
  details     String
  brand       String
  thumbnails  String[]
  images      String[]
  popular     Boolean?
  featured    Boolean?
  reviews     Review[]
  laptop      LaptopDetails?
  monitor     MonitorDetails?
  headphone   HeadphoneDetails?
  rating      Float
  createdAt   DateTime  @default(now())
  editedAt    DateTime  @default(now())
  @@map("products")
}

model Review {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  user_email  String
  content     String?
  rating      Int
  product     Product   @relation(fields: [productId], references: [id])
  productId   String    @db.ObjectId
  createdAt   DateTime  @default(now())
  @@map("reviews")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String 
  name     String? 
  @@map("users")
}

model MonitorDetails {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  resolution    String 
  refresh_rate  String
  panel_type    String
  product       Product   @relation(fields: [productId], references: [id])
  productId     String    @unique @db.ObjectId
  @@map("monitor-details")
}

model HeadphoneDetails {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  connection        String
  noise_cancelling  String
  battery_life      String
  product           Product   @relation(fields: [productId], references: [id])
  productId         String    @unique @db.ObjectId
  @@map("headphone-details")
}

model LaptopDetails {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  ram           String
  resolution    String 
  screen_size   String
  product       Product   @relation(fields: [productId], references: [id])
  productId     String    @unique @db.ObjectId
  @@map("laptop-details")
}
